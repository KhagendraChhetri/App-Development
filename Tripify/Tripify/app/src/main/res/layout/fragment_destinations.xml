<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F3"
    tools:context=".fragment_destinations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btna"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/rectangle_background"
                    android:backgroundTint="#FFB300"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_currency_exchange_24" />

                <TextView
                    android:id="@+id/textView11x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/currency_converter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnb"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#FFB300"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_calculate_24" />

                <TextView
                    android:id="@+id/textView11xxxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/budget_calculator" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnc"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#FFB300"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_favorite_24" />

                <TextView
                    android:id="@+id/textView11xx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/favourite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnd"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#FFB300"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_perm_contact_calendar_24" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/profile" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/destinationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>
